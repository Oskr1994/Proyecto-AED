package vista;

import java.awt.EventQueue;
import javax.swing.*;
import java.awt.Font;
import java.awt.Image;

public class frmMenuPrincipal extends JFrame {

    private JPanel contentPane;

    public static void main(String[] args) {
        EventQueue.invokeLater(() -> {
            try {
                frmMenuPrincipal frame = new frmMenuPrincipal();
                frame.setVisible(true);
            } catch (Exception e) {
                e.printStackTrace();
            }
        });
    }

    public frmMenuPrincipal() {
        setTitle("SISTEMA DE CITAS MÉDICAS");
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setBounds(100, 100, 900, 600);

        // ========= BARRA DE MENÚ =========
        JMenuBar menuBar = new JMenuBar();
        setJMenuBar(menuBar);

        JMenu menuMantenimiento = new JMenu("MANTENIMIENTO");
        JMenu menuRegistro = new JMenu("REGISTRO DE CITAS");
        JMenu menuConsultas = new JMenu("CONSULTAS");
        JMenu menuReportes = new JMenu("REPORTES");
        JMenu menuAyuda = new JMenu("AYUDA");

        menuBar.add(menuMantenimiento);
        menuBar.add(menuRegistro);
        menuBar.add(menuConsultas);
        menuBar.add(menuReportes);
        menuBar.add(menuAyuda);

        // ========= PANEL PRINCIPAL =========
        contentPane = new JPanel();
        contentPane.setLayout(null);
        setContentPane(contentPane);

        // ========= TÍTULO =========
        JLabel lblTitulo = new JLabel("CLÍNICA SAN SALUD");
        lblTitulo.setFont(new Font("Tahoma", Font.BOLD, 22));
        lblTitulo.setBounds(330, 20, 300, 30);
        contentPane.add(lblTitulo);

        // ========= IMAGEN =========
        ImageIcon icon = new ImageIcon(getClass().getResource("/imagenes/fondo.jpg"));
        Image img = icon.getImage().getScaledInstance(500, 350, Image.SCALE_SMOOTH);
        JLabel lblImagen = new JLabel(new ImageIcon(img));
        lblImagen.setBounds(200, 80, 500, 350);
        contentPane.add(lblImagen);
    }
}